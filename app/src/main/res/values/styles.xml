<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/categoryCard</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RainbowStarsRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_star_indicator</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:maxHeight">52dp</item>
        <item name="android:layout_marginStart">4dp</item>
    </style>

    <style name="correctword_ratingbar_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="playagain_image_style">
        <item name="android:layout_width">134dp</item>
        <item name="android:layout_height">117dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">75dp</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>

    <style name="home_image_style">
        <item name="android:layout_width">118dp</item>
        <item name="android:layout_height">91dp</item>
        <item name="android:layout_marginTop">96dp</item>
        <item name="android:layout_marginEnd">80dp</item>
    </style>

    <style name="playagain_text_style">
        <item name="android:layout_width">177dp</item>
        <item name="android:layout_height">77dp</item>
        <item name="android:elevation">14dp</item>
        <item name="android:fontFamily">@font/balloon</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">72sp</item>
    </style>

    <style name="home_text_style">
        <item name="android:layout_width">171dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:elevation">8dp</item>
        <item name="android:fontFamily">@font/balloon</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">72sp</item>
    </style>

    <style name="results_text_style">
        <item name="android:layout_width">178dp</item>
        <item name="android:layout_height">84dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:elevation">8dp</item>
        <item name="android:fontFamily">@font/balloon</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">62sp</item>
    </style>

    <style name="results_imgbutton_style">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">86dp</item>
        <item name="android:foreground">@color/colorteal</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:elevation">6dp</item>
    </style>

    <style name="home_imgbutton_style" parent="results_imgbutton_style">
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:foreground">@color/colorteal</item>
    </style>

    <style name="play_imgbutton_style">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">86dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:elevation">12dp</item>
        <item name="android:foreground">@color/colorteal</item>
    </style>

    <style name="results_image_style">
        <item name="android:layout_width">107dp</item>
        <item name="android:layout_height">82dp</item>
        <item name="android:layout_marginStart">88dp</item>
        <item name="android:layout_marginTop">96dp</item>
    </style>

    <style name="game_title_style">
        <item name="android:layout_width">878dp</item>
        <item name="android:layout_height">166dp</item>
        <item name="android:fontFamily">@font/balloon</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPurple</item>
        <item name="android:textSize">92sp</item>
    </style>

    <style name="game_title_card_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

</resources>
