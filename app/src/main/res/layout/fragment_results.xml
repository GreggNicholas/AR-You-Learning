<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.ResultsFragment">

    <TextView
        android:id="@+id/correct_text_ratingbar_title"
        style="@style/correctword_ratingbar_title"
        android:text="@string/correct_attempts_made"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/rainbow_correctword_ratingbar" />

    <RatingBar
        android:id="@+id/rainbow_correctword_ratingbar"
        style="@style/RainbowStarsRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/correct_text_ratingbar_title"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/result_fragment_user_right_answer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Right Answer: "
        android:textColor="@android:color/holo_green_dark"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/correct_text_ratingbar_title" />

    <TextView
        android:id="@+id/result_fragment_user_wrong_answer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Wrong Answer: "
        android:textColor="@android:color/holo_red_light"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/result_fragment_user_right_answer_tv" />

    <TextView
        android:id="@+id/result_fragment_correct_answer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Correct Answer: "
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/result_fragment_user_wrong_answer_tv" />


</android.support.constraint.ConstraintLayout>