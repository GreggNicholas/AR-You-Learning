<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.ResultsFragment">

    <TextView
        android:id="@+id/correct_text_ratingbar_title"
        style="@style/correctword_ratingbar_title"
        android:layout_width="0dp"
        android:text="@string/correct_attempts_made"
        app:layout_constraintEnd_toStartOf="@+id/rainbow_correctword_ratingbar"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/rainbow_correctword_ratingbar" />

    <RatingBar
        android:id="@+id/rainbow_correctword_ratingbar"
        style="@style/RainbowStarsRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/correct_text_ratingbar_title"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/result_fragment_user_right_answer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="2dp"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/correct_text_ratingbar_title"
        tools:text="@string/rightanswers" />

    <TextView
        android:id="@+id/result_fragment_user_wrong_answer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="2dp"
        android:textColor="@android:color/holo_red_light"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/result_fragment_user_right_answer_tv"
        tools:text="@string/wronganswers" />

    <TextView
        android:id="@+id/result_fragment_correct_answer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="2dp"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/result_fragment_user_wrong_answer_tv"
        tools:text="@string/correctanswers" />

    <WebView
        android:id="@+id/congrats_webview"
        android:layout_width="219dp"
        android:layout_height="157dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="32dp"
        android:background="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>