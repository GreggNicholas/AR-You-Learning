<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
   android:layout_marginTop="150dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    app:cardCornerRadius="22dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageButton
            android:id="@+id/playagain_imagebutton"
            style="@style/play_imgbutton_style"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/home_imagebutton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/showresults_imagebutton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.498"
            app:srcCompat="@drawable/replay_button"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/home_imagebutton"
            style="@style/home_imgbutton_style"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/playagain_imagebutton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.498"
            app:srcCompat="@drawable/replay_button"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/showresults_imagebutton"
            style="@style/results_imgbutton_style"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/playagain_imagebutton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.498"
            app:srcCompat="@drawable/replay_button"
            tools:ignore="ContentDescription" />


        <TextView
            android:id="@+id/results_textview"
            style="@style/results_text_style"
            android:text="@string/results"
            app:layout_constraintBottom_toBottomOf="@+id/showresults_imagebutton"
            app:layout_constraintEnd_toEndOf="@+id/showresults_imagebutton"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/showresults_imagebutton"
            app:layout_constraintTop_toTopOf="@+id/showresults_imagebutton" />

        <TextView
            android:id="@+id/home_textview"
            style="@style/home_text_style"
            android:text="@string/home"
            app:layout_constraintBottom_toBottomOf="@+id/home_imagebutton"
            app:layout_constraintEnd_toEndOf="@+id/home_imagebutton"
            app:layout_constraintStart_toStartOf="@+id/home_imagebutton"
            app:layout_constraintTop_toTopOf="@+id/home_imagebutton" />

        <TextView
            android:id="@+id/playagain_textview"
            style="@style/playagain_text_style"
            android:text="@string/play_again"
            app:layout_constraintBottom_toBottomOf="@+id/playagain_imagebutton"
            app:layout_constraintEnd_toEndOf="@+id/playagain_imagebutton"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/playagain_imagebutton"
            app:layout_constraintTop_toTopOf="@+id/playagain_imagebutton" />

        <ImageView
            android:id="@+id/results_imageview"
            style="@style/results_image_style"
            android:layout_marginStart="220dp"
            android:layout_marginTop="180dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_insert_chart_black_24dp"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/home_imageview"
            style="@style/home_image_style"
            android:layout_marginTop="172dp"
            android:layout_marginEnd="212dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_home_black_24dp"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/playagain_imageview"
            style="@style/playagain_image_style"
            android:layout_marginTop="144dp"
            app:layout_constraintEnd_toStartOf="@+id/home_imageview"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toEndOf="@+id/results_imageview"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/balloons_replay"
            tools:ignore="ContentDescription" />


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>